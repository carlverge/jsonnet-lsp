{
    "Local Variable": {
      "prefix": ["local"],
      "body": ["local ${1:name} = ${2:value};"],
      "description": "local variable definition"
    },
    "If Statement": {
        "prefix": ["if"],
        "body": ["if ${1:cond} then ${2:true} else ${3:false}"],
        "description": "conditional expression"
    },
    "Assertion": {
        "prefix": ["assert"],
        "body": ["assert ${1:cond}: \"${2:message}\";"],
        "description": "assertion"
    },
    "Multiline String": {
        "prefix": ["multi"],
        "body": ["|||\n\t$1\n|||"],
        "description": "multiline string"
    },
    "Function": {
        "prefix": ["func"],
        "body": ["function(${1:args}) ${2:value}"],
        "description": "function definition"
    }
}