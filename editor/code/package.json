{
  "name": "jsonnet-lsp",
  "displayName": "Jsonnet LSP",
  "publisher": "cverge",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlverge/jsonnet-lsp"
  },
  "homepage": "https://github.com/carlverge/jsonnet-lsp/blob/main/editor/code/README.md",
  "license": "Apache License Version 2.0",
  "description": "Jsonnet IDE Support. Autocomplete, lint, format, goto def, signature help.",
  "icon": "images/icon.png",
  "version": "0.1.3",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:jsonnet"
  ],
  "keywords": [
		"jsonnet",
		"lsp"
	],
  "main": "./out/extension.js",
  "extensionKind": ["workspace", "ui"],
  "contributes": {
    "languages": [
      {
        "id": "jsonnet",
        "extensions": [
          ".jsonnet",
          ".libsonnet",
          ".jsonnet.TEMPLATE"
        ],
        "aliases": [
          "Jsonnet"
        ],
        "configuration": "./syntax/language-configuration.json"
      }
    ],
    "snippets": [
      {
          "language": "jsonnet",
          "path": "./syntax/snippets.json"
      }
    ],
    "grammars": [
        {
            "language": "jsonnet",
            "scopeName": "source.jsonnet",
            "path": "./syntax/jsonnet.tmLanguage.json"
        }
    ],
    "commands": [
      {
				"command": "jsonnet.lsp.restart",
				"title": "Jsonnet: Restart Language Server"
			}
    ],
    "configuration": {
      "type": "object",
      "title": "Jsonnet",
      "properties": {
        "jsonnet.lsp.binaryPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Binary path for jsonnet language server. If not set, the bundled LSP will be used.",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b ./",
    "watch": "tsc -watch -b ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@types/vscode": "^1.69.0",
		"vscode-languageclient": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"eslint": "^7.26.0",
		"typescript": "^4.4.3"
  }
}
